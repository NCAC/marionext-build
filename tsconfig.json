{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "extendedDiagnostics": true,
    "lib": ["dom", "es5", "es6", "es2017"],
    "rootDirs": ["src"]
  },
  "include": ["src"]
}
